    function clearDevice() {
      $('#devID').val("");
      $('#friendlyName').val("");
      $('#friendlyName').prop('readonly', false);
      $('#roomHint').val("");
      $('input[name=type]').each(function(index){
        this.checked = false;
      });
      $('input[name=trait]').each(function(index){
        this.checked = false;
      });
      $('input[name=TemperatureSettingMode]').each(function(index){
        this.checked = false;
      })
      $('#TemperatureSettingModeHeat').prop('checked', true);
      $('type').val('action.devices.types.SWITCH');
      $('#OnOff').prop('checked',true);
      $("#dialog")
    }

    function edit(event, id) {
      if (event.shiftKey) {
        console.log(location);
        window.location.href = '/user/expert-mode/' + id;
      } else {
        clearDevice();
        $("#dialog").dialog({
          title: "Edit Device"
        }).dialog("open");
        var device = devices[id];
        $('#devID').val(device._id);
        $('#friendlyName').val(device.name.name);
        $('#friendlyName').prop('readonly', true);
        $('#roomHint').val(device.roomHint);
        switchType(device.type);
        // $('input[name=type][value="' + device.type + '"]').prop('checked', true);
        $("#type").val(device.type);
        device.traits.forEach(function(trait){
          var stuff = trait.split('\.');
          $('#'+stuff[stuff.length-1]).prop('checked',true);
        });
        if (device.traits.includes('action.devices.traits.TemperatureSetting')) {
          var unit = device.attributes["thermostatTemperatureUnit"]
          $("input:radio[name=TemperatureSettingUnit][value=" + unit + "]").prop("checked", true)
          $("#TemperatureSettingModeHeat").prop('checked', false)
          var modes = device.attributes["availableThermostatModes"].split(",")
          modes.forEach(function(mode){
            var modeName = "#TemperatureSettingMode" + mode.charAt(0).toUpperCase() + mode.slice(1)
            if ($(modeName).length > 0) {
              $(modeName).prop('checked', true)
            }
          })
        }
        if (device.traits.includes('action.devices.traits.TemperatureControl')) {
          var unit = device.attributes["temperatureUnitForUX"]
          $("input:radio[name=TemperatureControlUnit][value=" + unit + "]").prop("checked", true)
        }
      }
    }

    function addDevice(event){
      if (event.shiftKey) {
        window.location.href = '/user/expert-mode';
      } else {
        clearDevice();
        $("#dialog").dialog({title: "Add New Device"}).dialog("open");
      }
    }

    function deleteDevice(id) {
      var answer = confirm("Are you sure you want to delete this device?");
      if (answer) {
        $.ajax({
          url:"/user/devices/" + id,
          type: 'DELETE',
          success: function(data, status, jqXHR){
            document.location.reload();
          },
          error: function(xhr, status, err) {
            console.log(err);
            document.location.reload();
          }
        });
      }
    }

    function switchType(type) {
      switch(type) {
        case 'action.devices.types.SWITCH':
        case 'action.devices.types.OUTLET':
          $('#OnOff').prop('checked',true);
          $('#Brightness').prop('checked', false);
          $('#ColorTemperature').prop('checked', false);
