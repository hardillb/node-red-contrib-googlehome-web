    <label for="friendlyName">Name: </label><br>
    <input id="friendlyName" type="text" onchange="checkName(this.value)">
    <label for="roomHint">Room (optional): </label>
    <input id="roomHint" type="text">
    <!-- <span>Optional</span> -->
    <fieldset id="deviceType">
