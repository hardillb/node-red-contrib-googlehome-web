           <option value="action.devices.types.OUTLET">Outlet</option>
           <option value="action.devices.types.LIGHT">Light</option>
           <option value="action.devices.types.BLINDS">Blinds</option>
           <option value="action.devices.types.DOOR">Door</option>
           <option value="action.devices.types.WINDOW">Window</option>    
           <option value="action.devices.types.THERMOSTAT">Thermostat</option>       
           <option value="action.devices.types.FAN">Fan</option>
           <option value="action.devices.types.HEATER">Heater</option>
           <option value="action.devices.types.AIRPURIFIER">Purifier</option>
           <option value="action.devices.types.SENSOR">Sensor</option>
           <option value="action.devices.types.CAMERA">Camera</option>
           <option value="action.devices.types.SCENE">Scene</option>
           <!-- <option value="action.devices.types.CHARGER">Charger</option> -->
           <!-- <option value="action.devices.types.VACUUM">Vacume</option> -->
        </select>

      </div>
    </fieldset>
    <fieldset id="deviceTraits">
      <legend>Traits</legend>
      <!-- <div style="display: flex; width: 50%"> -->
      <div>
        <!-- <div class="traits"> -->
          <fieldset id="OnOffTraits" class="traits">
            <label for="OnOff">On/Off: </label>
            <input type="checkbox" name="trait" id="OnOff" value="action.devices.traits.OnOff" checked="true">
          </fieldset>
          <fieldset id="lightTraits" class="traits" disabled>
            <label for="Brightness">Brightness: </label>
            <input type="checkbox" name="trait" id="Brightness" value="action.devices.traits.Brightness"><br/>
            <label for="ColorTemperature">Color Settings: </label>
            <input type="checkbox" name="trait" id="ColorSetting" value="action.devices.traits.ColorSetting">
          </fieldset>
<!--           <fieldset id="vacuumTraits" disabled>
            <label for="StartStop">Start/Stop: </label>
            <input type="checkbox" name="trait" id="StartStop" value="action.devices.traits.StartStop"><br>
            <label for="RunCycle">Run Cycle: </label>
            <input type="checkbox" name="trait" id="RunCycle" value="action.devices.traits.RunCycle">
          </fieldset> -->
          <fieldset id="CameraTraits" class="traits" disabled>
            <label for="CameraStream">Camera Stream: </label>
            <input type="checkbox" name="trait" id="CameraStream" value="action.devices.traits.CameraStream">
          </fieldset>
          <fieldset id="blindsTraits" class="traits" disabled>
            <label for="OpenClose">Open/Close: </label>
            <input type="checkbox" name="trait" id="OpenClose" value="action.devices.traits.OpenClose">
          </fieldset>
          <fieldset id="sensorTraits" class="traits" disabled>
            <label for="TemperatureSensor">TemperatureSensor: </label>
            <input type="checkbox" name="trait" id="TemperatureSensor" value="action.devices.traits.TemperatureControl" onchange="temperatureControls(this.checked)">
            <label for="HumiditySensor">HumiditySensor: </label>
            <input type="checkbox" name="trait" id="HumiditySensor" value="action.devices.traits.HumiditySetting">
